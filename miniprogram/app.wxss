/* ========== 夜间模式主题变量 ========== */
page {
  --bg-primary: #ffffff;
  --bg-secondary: #f7f8fa;
  --bg-gradient-start: #f0f6ff;
  --bg-gradient-end: #f7f8fa;
  --text-primary: #00234b;
  --text-secondary: #666666;
  --text-muted: #999999;
  --border-color: #e7e7e7;
  --card-bg: #ffffff;
  --card-shadow: rgba(0, 82, 217, 0.06);
  --primary-color: #0052d9;
  --primary-light: #e6f0ff;
}

/* 夜间模式变量覆盖 */
page.dark-mode,
.dark-mode {
  --bg-primary: #1a1a1a;
  --bg-secondary: #252525;
  --bg-gradient-start: #1a1a1a;
  --bg-gradient-end: #252525;
  --text-primary: #e5e5e5;
  --text-secondary: #b3b3b3;
  --text-muted: #808080;
  --border-color: #404040;
  --card-bg: #2a2a2a;
  --card-shadow: rgba(0, 0, 0, 0.3);
  --primary-color: #4a90e2;
  --primary-light: #1e3a5f;
}

/* 夜间模式特殊样式 */
.dark-mode .card {
  background: var(--card-bg);
  border-color: var(--border-color);
}

.dark-mode .format-item,
.dark-mode .category-card,
.dark-mode .file-item {
  background: var(--card-bg);
  border-color: var(--border-color);
  color: var(--text-primary);
}

/* 容器样式 */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx;
}

/* 通用卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx var(--card-shadow);
  border: 1rpx solid var(--border-color);
}

.subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

/* 格式选择网格 */
.format-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.format-item {
  background: var(--card-bg);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx 12rpx;
  text-align: center;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx var(--card-shadow);
  color: var(--text-primary);
}

.format-item.selected {
  background: var(--primary-light);
  border-color: var(--primary-color);
  color: var(--primary-color);
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx var(--card-shadow);
}

.format-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 文件列表样式 */
.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: var(--card-bg);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid var(--border-color);
  /* 关键：确保内容溢出时布局稳定 */
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx var(--card-shadow);
}

.file-info {
  flex: 1;
  /* 关键：允许 flex 子项收缩到 0，防止长文本撑开容器 */
  min-width: 0;
  margin-right: 20rpx; /* 增加与按钮组的间距 */
}

.file-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  /* 关键：单行截断 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-actions {
  /* 关键：防止按钮组被压缩 */
  flex-shrink: 0;
  text-align: right;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 8rpx;
}

.status-processing {
  background: #fff3cd;
  color: #856404;
}

.status-success {
  background: #d1edff;
  color: #0052d9;
}

.status-error {
  background: #f8d7da;
  color: #721c24;
}

.action-row {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end; /* 靠右对齐 */
}

.action-row button {
  font-size: 22rpx;
  padding: 8rpx 24rpx;
  margin: 0 !important; /* 清除默认 margin */
  line-height: 1.5;
  white-space: nowrap; /* 按钮文字不换行 */
  border-radius: 30rpx;
}

/* 进度条样式 */
.progress-container {
  margin-top: 16rpx;
}

.progress-bar {
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #0052d9;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
}

/* 按钮样式 */
.btn-primary {
  background: #0052d9;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.2);
}

.btn-success {
  background: #2ba471;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(43, 164, 113, 0.2);
}

/* 预览模态框 */
.preview-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.preview-content {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  max-width: 80%;
  text-align: center;
}

.preview-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.close-preview-btn {
  background: #6c757d;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
}

.muted {
  font-size: 24rpx;
  color: #6c757d;
  text-align: center;
}

.no-targets {
  grid-column: 1 / -1;
  text-align: center;
  padding: 48rpx;
}
