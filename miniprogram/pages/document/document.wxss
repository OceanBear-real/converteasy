/* pages/document/document.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
  transition: background 0.3s ease;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 主题切换按钮 */
.theme-toggle {
  position: absolute;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: var(--card-bg);
  box-shadow: 0 4rpx 12rpx var(--card-shadow);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 2rpx solid var(--border-color);
}

.theme-toggle:active {
  transform: scale(0.95);
  background: var(--primary-light);
}

.theme-icon {
  font-size: 32rpx;
}

.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx var(--card-shadow);
  border: 1rpx solid var(--border-color);
}

.subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.format-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.format-item {
  background: var(--card-bg);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 28rpx 16rpx;
  text-align: center;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx var(--card-shadow);
  color: var(--text-primary);
}

.format-item.selected {
  background: #e6f0ff;
  border-color: #0052d9;
  color: #0052d9;
  font-weight: 600;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.15);
}

.format-text {
  font-size: 26rpx;
  font-weight: 500;
}

.btn-primary {
  background: #0052d9;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.2);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 82, 217, 0.2);
}

.btn-success {
  background: #2ba471;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(43, 164, 113, 0.2);
  transition: all 0.3s ease;
}

.btn-success:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(43, 164, 113, 0.2);
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #667eea;
}

.file-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.file-size {
  font-size: 24rpx;
  color: #666;
}

.file-actions {
  text-align: right;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.status-processing {
  background: #fff3cd;
  color: #856404;
  border: 1rpx solid #ffeaa7;
}

.status-success {
  background: #d1edff;
  color: #0c5460;
  border: 1rpx solid #bee5eb;
}

.status-error {
  background: #f8d7da;
  color: #721c24;
  border: 1rpx solid #f5c6cb;
}

.action-row {
  display: flex;
  gap: 12rpx;
}

.action-row button {
  font-size: 22rpx;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  background: #667eea;
  color: white;
  border: none;
}

.action-row button:active {
  background: #5a6fd8;
  transform: scale(0.95);
}

.progress-container {
  margin-top: 20rpx;
}

.progress-bar {
  height: 16rpx;
  background: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.muted {
  font-size: 24rpx;
  color: #6c757d;
  text-align: center;
}

.no-targets {
  grid-column: 1 / -1;
  text-align: center;
  padding: 48rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx dashed #dee2e6;
}
