/* pages/index/index.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
  transition: background 0.3s ease;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 20rpx;
  position: relative;
}

/* 夜间模式切换按钮 */
.theme-toggle {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: var(--card-bg);
  box-shadow: 0 4rpx 16rpx var(--card-shadow);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 2rpx solid var(--border-color);
}

.theme-toggle:active {
  transform: scale(0.95);
  background: var(--primary-light);
}

.theme-icon {
  font-size: 36rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.category-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx var(--card-shadow);
  transition: all 0.3s ease;
  border: 1rpx solid var(--border-color);
}

.category-card:active {
  transform: scale(0.98);
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.category-card:last-child {
  grid-column: 1 / -1;
  width: calc(50% - 12rpx);
  justify-self: center;
}

.category-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  display: block;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
}

.category-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}
